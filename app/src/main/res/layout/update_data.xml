<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#27962C">

    <View
        android:id="@+id/v_backgroundWhiteNewData"
        android:layout_width="411dp"
        android:layout_height="608dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/bg_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_updateData"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:lineSpacingExtra="0dp"
        android:text="Data Update"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_categoryupdate"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/bg_form"
        android:ems="10"
        android:hint="Category"
        android:inputType="text"
        android:paddingStart="25dp"
        android:textColor="@color/white"
        android:textColorHint="#DAAAAA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/v_backgroundWhiteNewData" />

    <Button
        android:id="@+id/bt_updateData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Update data"
        app:layout_constraintEnd_toEndOf="@+id/et_descriptionupdate"
        app:layout_constraintStart_toStartOf="@+id/et_descriptionupdate"
        app:layout_constraintTop_toBottomOf="@+id/et_descriptionupdate" />

    <EditText
        android:id="@+id/et_nominalupdate"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_form"
        android:ems="10"
        android:hint="Nominal"
        android:inputType="text"
        android:paddingStart="25dp"
        android:textColor="@color/white"
        android:textColorHint="#DAAAAA"
        app:layout_constraintEnd_toEndOf="@+id/et_categoryupdate"
        app:layout_constraintStart_toStartOf="@+id/et_categoryupdate"
        app:layout_constraintTop_toBottomOf="@+id/et_categoryupdate" />

    <EditText
        android:id="@+id/et_descriptionupdate"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_form"
        android:ems="10"
        android:hint="Description"
        android:inputType="text"
        android:paddingStart="25dp"
        android:textColor="@color/white"
        android:textColorHint="#DAAAAA"
        app:layout_constraintEnd_toEndOf="@+id/et_nominalupdate"
        app:layout_constraintStart_toStartOf="@+id/et_nominalupdate"
        app:layout_constraintTop_toBottomOf="@+id/et_nominalupdate" />

    <Button
        android:id="@+id/bt_backadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Back to add"
        app:layout_constraintEnd_toEndOf="@+id/bt_updateData"
        app:layout_constraintStart_toStartOf="@+id/bt_updateData"
        app:layout_constraintTop_toBottomOf="@+id/bt_updateData" />

</androidx.constraintlayout.widget.ConstraintLayout>