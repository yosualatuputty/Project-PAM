<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/add_expense"
    android:paddingHorizontal="20sp"
    android:paddingVertical="20sp"
    android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="800sp"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginBottom="30sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="34sp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="30sp">

                    <ImageView
                        android:id="@+id/iv_close"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        app:srcCompat="@drawable/ic_close" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="30sp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_expense_active"
                            android:layout_width="103sp"
                            android:layout_height="30sp"
                            app:srcCompat="@drawable/ic_expense_active_bar"/>

                        <ImageView
                            android:id="@+id/iv_income_inactive"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            app:srcCompat="@drawable/ic_income"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_ceklis"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        app:srcCompat="@drawable/ic_ceklis" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category"
                            android:textColor="@color/blackBG"
                            style="@style/TextView.H3"
                            android:layout_marginBottom="10sp"/>
                        <TextView
                            android:id="@+id/tv_category_dropdown"
                            android:layout_width="match_parent"
                            android:hint="Choose your category"
                            android:paddingHorizontal="15sp"
                            android:textColor="@color/blackBG"
                            style="@style/TextView.Subhead3"
                            android:layout_height="44sp"
                            android:dropDownWidth="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:spinnerMode="dropdown"
                            android:paddingBottom="4sp"
                            android:background="@drawable/shape_fields"/>

                        <RelativeLayout
                            android:id="@+id/category_dropdown_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:background="@drawable/shape_dropdown">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_category"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wallet"
                            android:textColor="@color/blackBG"
                            style="@style/TextView.H3"
                            android:layout_marginBottom="10sp"/>
                        <TextView
                            android:id="@+id/tv_wallet_dropdown"
                            android:layout_width="match_parent"
                            android:hint="Choose your wallet"
                            android:paddingHorizontal="15sp"
                            android:textColor="@color/blackBG"
                            style="@style/TextView.Subhead3"
                            android:layout_height="44sp"
                            android:dropDownWidth="match_parent"
                            android:dropDownVerticalOffset="44sp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:spinnerMode="dropdown"
                            android:paddingBottom="4sp"
                            android:background="@drawable/shape_fields"/>

                        <RelativeLayout
                            android:id="@+id/wallet_dropdown_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:background="@drawable/shape_dropdown">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_wallet"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amount"
                            android:textColor="@color/blackBG"
                            style="@style/TextView.H3"
                            android:layout_marginBottom="10sp"/>
                        <EditText
                            android:id="@+id/et_amount"
                            android:layout_width="match_parent"
                            android:layout_height="44sp"
                            android:inputType="number"
                            android:digits="0123456789"
                            android:paddingHorizontal="15sp"
                            android:hint="Type here..."
                            style="@style/TextView.Subhead3"
                            android:textColor="@color/forestGreen"
                            android:paddingBottom="4sp"
                            android:background="@drawable/shape_fields"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:textColor="@color/blackBG"
                            style="@style/TextView.H3"
                            android:layout_marginBottom="10sp"/>
                        <EditText
                            android:id="@+id/et_description"
                            android:layout_width="match_parent"
                            android:layout_height="44sp"
                            android:inputType="textLongMessage"
                            android:paddingHorizontal="15sp"
                            android:hint="Type here..."
                            style="@style/TextView.Subhead3"
                            android:textColor="@color/forestGreen"
                            android:paddingBottom="4sp"
                            android:background="@drawable/shape_fields"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/bt_continue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_large_default"
                android:text="CONTINUE"
                android:textColor="@color/white"
                android:paddingHorizontal="15sp"
                android:gravity="center_horizontal|center_vertical"/>
        </LinearLayout>

</LinearLayout>

